{
  "name": "@typed-firestore/react",
  "version": "1.0.0-6",
  "description": "Elegant, typed abstractions for Firestore in React applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-firestore-react"
  },
  "keywords": [
    "typed-firestore",
    "firestore",
    "react",
    "hooks",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint src",
    "compile": "tsc --noEmit",
    "build": "tsup && tsc --emitDeclarationOnly && tsc-alias --verbose",
    "prepare": "pnpm clean && pnpm build",
    "test": "echo \"No test specified\"",
    "clean": "del-cli dist tsconfig.tsbuildinfo"
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/js": "^9.18.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.0.7",
    "del-cli": "^6.0.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.3"
  },
  "peerDependencies": {
    "firebase": ">=10.0",
    "react": ">=16.8.0"
  }
}
