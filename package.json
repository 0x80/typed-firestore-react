{
  "name": "@typed-firestore/react",
  "version": "1.2.0",
  "description": "Elegant, typed abstractions for Firestore in React applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-firestore-react"
  },
  "keywords": [
    "firebase",
    "firestore",
    "hooks",
    "react",
    "typed-firestore",
    "typed",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint src",
    "check-types": "tsc --noEmit",
    "build": "tsdown",
    "prepare": "pnpm clean && pnpm check-types && pnpm build",
    "test": "echo \"No test specified\"",
    "clean": "del-cli dist tsconfig.tsbuildinfo"
  },
  "author": "Thijs Koerselman",
  "license": "Apache-2.0",
  "devDependencies": {
    "@codecompose/typescript-config": "^2.3.0",
    "@eslint/js": "^9.18.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.0.7",
    "del-cli": "^6.0.0",
    "eslint": "^9.18.0",
    "firebase": "^12.6.0",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "react": "^19.2.0",
    "tsdown": "^0.16.7",
    "typescript": "6.0.0-beta",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.3"
  },
  "peerDependencies": {
    "firebase": ">=10.0",
    "react": ">=16.8.0"
  },
  "module": "./dist/index.mjs"
}
